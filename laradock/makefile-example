FIG = docker-compose

# コンテナ操作コマンド等
build:
	@$(FIG) build
ps:
	@$(FIG) ps
up:
	@$(FIG) up -d
	@$(FIG) exec --user=laradock workspace npm run watch
down:
	@$(FIG) down
restart:
	@$(FIG) stop
	@$(FIG) start
clean:
	@docker image prune
	@docker volume prune
delete:
	@docker image prune -a
db:
	@$(FIG) exec mongo mongo
w:
	@$(FIG) exec --user=laradock workspace bash
echo:
	@$(FIG) exec laravel-echo-server sh
watch:
	@$(FIG) exec --user=laradock workspace npm run watch
dev:
	@$(FIG) exec --user=laradock workspace npm run dev